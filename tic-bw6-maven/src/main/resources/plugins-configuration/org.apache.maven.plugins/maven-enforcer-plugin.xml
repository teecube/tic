<plugin>
	<version>1.3.1</version>
	<configuration>
		<rules>
			<requireMavenVersion>
				<version>[3.1.1,)</version>
			</requireMavenVersion>
			<requireJavaVersion>
				<version>[1.7.0,)</version>
			</requireJavaVersion>
			<requireProperty>
				<property>tibco.home</property>
				<message>The "tibco.home" property must be a valid TIBCO installation.</message>
				<regex>.*</regex>
			</requireProperty>
			<requireProperty>
				<property>tibco.bw6.version</property>
				<message>The "tibco.bw6.version" property must be set.</message>
				<regex>6\.\d*</regex>
				<regexMessage>The "tibco.bw6.version" property must start with '6.' but is '${tibco.bw6.version}'.</regexMessage>
			</requireProperty>
			<requireFilesExist>
				<message>The directory '${tibco.bw6.p2repository}' must exist.</message>
				<files>
					<file>${tibco.bw6.p2repository}/</file>
				</files>
			</requireFilesExist>
			<requireFilesExist>
				<message>The directory '${tibco.bw6.p2repository}' must be a p2 repository.</message>
				<files>
					<file>${tibco.bw6.p2repository}/artifacts.xml</file>
					<file>${tibco.bw6.p2repository}/content.xml</file>
				</files>
			</requireFilesExist>
		</rules>
		<fail>true</fail>
		<failFast>true</failFast> <!-- Fail on the first rule that doesn't pass -->
	</configuration>
</plugin>