<?xml version="1.0" encoding="UTF-8"?>

<plugin>
	<executions>
		<execution>
			<id>enforce-tic</id>
			<goals>
				<goal>enforce</goal>
			</goals>
			<phase>validate</phase>
				<configuration>
					<rules>
						<requireMavenVersion>
							<version>[3.1.1,)</version>
						</requireMavenVersion>
						<requireJavaVersion>
							<version>[1.7.0,)</version>
						</requireJavaVersion>
						<requireProperty>
							<property>tibco.home</property>
							<message>The "tibco.home" property locates the TIBCO installation.</message>
							<regex>.*</regex>
						</requireProperty>
						<requireProperty>
							<property>bw.version</property>
							<message>The "bw.version" property must be set.</message>
							<regex>6\.\d*</regex>
							<regexMessage>The "bw.version" property must start with '6.' but is '${bw.version}'.</regexMessage>
						</requireProperty>
					</rules>
				</configuration>
		</execution>
	</executions>
</plugin>