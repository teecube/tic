<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/DECORATION/1.3.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd">

	<body>
		<menu name="${ecosystemName}">
			<item name="Current versions" href="${siteURL}/current-versions.html" />
			<item name="" />
			<item name="TIC" href="${siteDisplayURL}/${ticURLBase}/index.html" />
			<item name="TAC" href="${siteDisplayURL}/${tacURLBase}/index.html" />
			<item name="TOE" href="${siteDisplayURL}/${toeURLBase}/index.html" />
		</menu>
	</body>

	<custom>
		<reflowSkin>
			<protocolRelativeURLs>false</protocolRelativeURLs>
			<absoluteResourceURL>${siteURL}</absoluteResourceURL>

			<slogan>${ticSlogan}</slogan>

			<bottomDescription>
		        <![CDATA[
				${ecosystemSumUp}
		        ]]>
			</bottomDescription>

			<pages>
				<index>
					<titleTemplate>${ecosystemName}</titleTemplate>
					<markPageHeader>false</markPageHeader>
					<sections>
						<body />
						<thumbs>2</thumbs>
					</sections>
				</index>
			</pages>
		</reflowSkin>
	</custom>

	<bannerLeft>
		<name>
          <![CDATA[
          ${ticDisplayedName}
          ]]>
		</name>
		<href>./index.html</href>
	</bannerLeft>

</project>